#!/bin/bash

usage() {
  echo "Run something in a container, volume-mapped to the current directory."
  echo ""
  echo "--image [image]       Image to use."
  echo "--offline             Disables networking."
  echo "--description [desc]  Adds a custom description."
  echo "-- [args...]          What to run in container. Default: bash shell."
}

root=
offline=
customcommand=

while :; do
  if [ $# -le 0 ]; then
      break
  fi

  lowerI="$(echo $1 | awk '{print tolower($0)}')"
  case $lowerI in
    -h|--help)
      usage
      exit 0
      ;;
    --)
      # Interpret remaining args as the command to run.
      customcommand=1
      shift
      break
      ;;
    --image)
      image=$2
      shift
      ;;
    --root)
      root=1
      ;;
    --offline)
      offline=1
      ;;
    --description)
      description=$2
      shift
      ;;
    *)
      echo "Unrecognized argument '$1'"
      usage
      exit 1
      ;;
  esac

  shift
done

if [ ! "$image" ]
then
  echo "No image set."
  exit 1
fi

description=${description:-container${net:+ networking on}}

netargs=''
if [ "$offline" ]
then
  netargs='--network none'
fi

idargs=-u="$(id -u):$(id -g)"
homeargs='-e HOME=/work/.rhelhome'
if [ "$root" ]
then
  idargs=
  homeargs=
fi

PS1="\[\e[0;93m\]## ($description) \u\[\e[m\] \[\e[1;34m\]\w\[\e[m\]\[\e[0;93m\]\n#> \[\e[m\]"
PS2="\[\e[0;93m\]#>\[\e[0m\] "

run() {
  set -x
  docker run \
    -it --rm \
    $idargs \
    $homeargs \
    -e SOURCE_BUILD_SKIP_SUBMODULE_CHECK \
    $netargs \
    -e "PS1=$PS1" \
    -e "PS2=$PS2" \
    -v $(pwd):/work:z \
    -w /work \
    "$image" \
    "$@"
}

if [ "$customcommand" ]
then
  run "$@"
else
  run bash
fi

